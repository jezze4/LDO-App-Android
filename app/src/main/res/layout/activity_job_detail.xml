<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobDetail">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:gravity="top"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toolbar_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0sp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ldo_logo_after_nobg"
                android:textAlignment="center"
                android:visibility="visible" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2">

        <RelativeLayout
            android:id="@+id/rel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundPrimary"
                android:elevation="2dp"
                android:fontFamily="sans-serif-light"
                android:padding="20dp"
                android:layout_marginTop="?attr/actionBarSize"
                android:text="detail_Title"
                android:textAlignment="center"
                android:textColor="@color/textPrimary"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_title"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="Description"
                android:textColor="@color/textPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_marginBottom="20dp"
                android:paddingLeft="25dp"
                android:text="Description\nInfo\nfor\nItem\nListing"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/requirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_description"
                android:paddingLeft="15dp"
                android:text="Requirements"
                android:textColor="@color/textPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_requirement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/requirements"
                android:layout_marginBottom="20dp"
                android:paddingLeft="25dp"
                android:text="Description\nInfo\nfor\nItem\nListing"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_requirement"
                android:paddingLeft="15dp"
                android:text="Salary"
                android:textColor="@color/textPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/salary"
                android:paddingLeft="25dp"
                android:text="detail_Salary"
                android:textSize="18sp"
                android:textStyle="normal" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <!--<android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:layout_gravity="bottom|center"
        app:fabSize="normal"
        />-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="16dp"
        android:padding="15dp"
        android:background="@drawable/button_background"
        android:text="   Apply   "
        android:textColor="#fff"
        android:textSize="20sp" />

</android.support.design.widget.CoordinatorLayout>
